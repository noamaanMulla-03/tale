{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tale",
  "version": "0.1.0",
  "identifier": "com.tale.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tale",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "label": "main",
        "decorations": true,
        "transparent": false,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "tooltip": "Tale - Chat Application"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
